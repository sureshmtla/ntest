SELECT 'SELECT ''' || table_name || ''' AS table_name, ''' || column_name || ''' AS column_name FROM ' || table_name || 
       ' WHERE TO_CHAR(' || column_name || ') LIKE ''%search_term%'';' AS search_sql
FROM all_tab_columns
WHERE data_type IN ('VARCHAR2', 'CHAR', 'NVARCHAR2', 'CLOB')
AND owner = 'YOUR_SCHEMA';
